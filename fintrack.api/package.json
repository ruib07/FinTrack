    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "ncp": "^2.0.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  },
